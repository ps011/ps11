language: node_js

node_js:
  - "10.14.2"

cache:
  directories:
    - ./node_modules
branches:
  only:
    - master
    - develop

install:
  - npm install

script:
  - npm run build

after_success: |
  cd "$TRAVIS_BUILD_DIR"
  cd dist
  cd browser
  git init
  git checkout -b master
  git add .
  git -c user.name='ps11_builder' -c user.email='ps11_builder' commit -m init
  git push -f  https://ps011:$GITHUB_TOKEN@github.com/ps011/ps011.github.io.git master
  cd "$TRAVIS_BUILD_DIR"
